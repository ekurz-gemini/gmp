        <version>1.2.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>edu.gemini.aspen.giapi-osgi.build</groupId>
    <artifactId>provision</artifactId>
    <version>1.0.0</version>

    <name>giapi-osgi - imported bundles</name>

    <packaging>pom</packaging>

    <properties>
        <org.apache.felix.ipojo>1.8.0</org.apache.felix.ipojo>
        <scala-lang.version>2.9.1</scala-lang.version>
    </properties>

    <!--
     | imported (non-local) bundles are listed here as dependencies
     | and will be deployed by pax:provision unless they are marked
     | with <optional>true</optional>
    -->

    <dependencies>
        <!-- Felix iPOJO -->
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.ipojo</artifactId>
            <version>${org.apache.felix.ipojo}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.ipojo.annotations</artifactId>
            <version>${org.apache.felix.ipojo}</version>
        </dependency>
        <!-- Scala dependencies -->
        <dependency>
            <groupId>com.weiglewilczek.scala-lang-osgi</groupId>
            <artifactId>scala-library</artifactId>
            <version>${scala-lang.version}</version>
        </dependency>
    </dependencies>

</project>
