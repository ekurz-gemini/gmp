<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>gmp-server</id>
    <formats>
        <format>tar.gz</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0644</fileMode>
            <includes>
                <include>org.ops4j.pax.runner:*</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <repositories>
        <repository>
            <outputDirectory>felix</outputDirectory>
            <includes>
                <include>org.apache.felix:org.apache.felix.framework</include>
                <include>org.apache.felix:org.apache.felix.main</include>
                <include>org.apache.felix:org.apache.felix.gogo.*</include>
            </includes>
            <excludes>
                <exclude>org.easymock:*</exclude>
                <exclude>edu.gemini.aspen.giapi-osgi:*</exclude>
            </excludes>
        </repository>
        <repository>
            <outputDirectory>bundles</outputDirectory>
            <includeMetadata>true</includeMetadata>
            <includes>
                <include>*:*</include>
            </includes>
            <excludes>
                <exclude>org.apache.felix:org.apache.felix.framework</exclude>
                <exclude>org.apache.felix:org.apache.felix.main</exclude>
                <exclude>org.apache.felix:org.apache.felix.gogo.*</exclude>
            </excludes>
        </repository>
    </repositories>

    <fileSets>
        <fileSet>
            <directory>src/main/etc/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>runner.args</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/site/doxygen</directory>
            <outputDirectory>/doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/etc/bin</directory>
            <fileMode>0755</fileMode>
            <outputDirectory>/bin</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>start.sh</include>
                <include>gmp-server-ctl.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../giapi-tester/src/main/etc/bin</directory>
            <fileMode>0755</fileMode>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>giapi-tester.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../giapi-tester/target/</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>giapi-tester.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/etc/conf</directory>
            <excludes>
                <exclude>gsaoi.xml</exclude>
            </excludes>
            <outputDirectory>/conf</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/etc/logs</directory>
            <outputDirectory>/logs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/doc</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>0644</fileMode>
            <filtered>true</filtered>
            <includes>
                <include>*.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>0644</fileMode>
            <filtered>true</filtered>
            <includes>
                <include>README</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${user.home}/.m2/repository/edu/gemini/aspen/gmp/gmp-server/</directory>
            <outputDirectory>bundles/edu/gemini/aspen/gmp/gmp-server/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
