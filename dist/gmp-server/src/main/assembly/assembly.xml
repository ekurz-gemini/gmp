<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <formats>
        <format>zip</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <outputDirectory>/${external.dir}</outputDirectory>
            <includes>
                <include>*:*</include>
            </includes>
            <excludes>
                <exclude>org.apache.felix:org.apache.felix.main</exclude>
                <exclude>org.apache.felix:org.apache.felix.gogo.*</exclude>
                <exclude>org.apache.felix:org.apache.felix.bundlerepository</exclude>
                <exclude>org.apache.felix:org.apache.felix.configadmin</exclude>
                <exclude>org.ops4j.pax.logging:*</exclude>
                <exclude>org.ops4j.pax.confman:*</exclude>
                <exclude>org.osgi:*</exclude>
                <exclude>edu.gemini.aspen:*</exclude>
                <exclude>edu.gemini.aspen.gmp:*</exclude>
                <exclude>edu.gemini.jms:*</exclude>
                <exclude>edu.gemini.epics:*</exclude>
                <exclude>edu.gemini.cas:*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/felix</outputDirectory>
            <includes>
                <include>org.apache.felix:org.apache.felix.main</include>
                <include>org.apache.felix:org.apache.felix.gogo.*</include>
                <include>org.apache.felix:org.apache.felix.bundlerepository</include>
                <include>org.apache.felix:org.apache.felix.configadmin</include>
                <include>org.ops4j.pax.logging:*</include>
                <include>org.ops4j.pax.confman:*</include>
                <include>org.osgi:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/${bundle.dir}</outputDirectory>
            <includes>
                <include>edu.gemini.aspen:*</include>
                <include>edu.gemini.aspen.gmp:*</include>
                <include>edu.gemini.epics:*</include>
                <include>edu.gemini.jms:*</include>
                <include>edu.gemini.cas:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main/etc/bin</directory>
            <fileMode>0755</fileMode>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/etc/conf</directory>
            <outputDirectory>/conf</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/etc/logs</directory>
            <outputDirectory>/logs</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
