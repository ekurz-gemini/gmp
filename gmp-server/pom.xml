                    <targetVendor>redhat</targetVendor>
                    <requires>
                        <require>java &gt;= 1.6.0</require>
                    </requires>
                    <release>5</release>
                    <preinstallScriptlet>
                        <script>
                            #check for user, or create it?
                            id -u software &amp;&gt; /dev/null || useradd software -u 3624 -g gemini -m &amp;&gt; /dev/null || (groupadd -g 2000 gemini &amp;&gt; /dev/null &amp;&amp; useradd software -g gemini -m &amp;&gt; /dev/null) || echo "Problem: could not create user software"
                        </script>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <script>
                            #create logs/ directory
                            mkdir -p /gemsoft/opt/gpi/${project.artifactId}-${project.version}/logs

                            #change user/group for all files(particularly directories)
                            chown -R software.gemini /gemsoft/opt/gpi/${project.artifactId}-${project.version}/

                            #copy/create appropriate module.properties

                            #add pax runner jars

                            #chkconfig
                            if [ $1 -eq 1 ]; then
                            chkconfig --add gmp-server
                            chkconfig --level 345 gmp-server on
                            fi

                            #symlink /gemsoft/opt/gpi/gmp -> /gemsoft/opt/gpi/gmp-server-$VERSION
                            if [ $1 -ne 1 ]; then
                            rm -f /gemsoft/opt/gpi/gmp
                            fi
                            ln -s /gemsoft/opt/gpi/${project.artifactId}-${project.version}/ /gemsoft/opt/gpi/gmp
                        </script>
                    </postinstallScriptlet>
                    <preremoveScriptlet>
                        <script>
                            #chkconfig
                            if [ $1 -eq 0 ]; then
                            chkconfig --del gmp-server
                            fi
                        </script>
                    </preremoveScriptlet>
                    <postremoveScriptlet>
                        <script>
                            #delete leftover directories
                            if [ $1 -eq 0 ]; then
                            rm -rf /gemsoft/opt/gpi/${project.artifactId}-${project.version}
                            rm /gemsoft/opt/gpi/gmp
                            fi
                        </script>
                    </postremoveScriptlet>
                </configuration>
